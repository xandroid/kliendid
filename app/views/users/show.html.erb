<% provide(:title, @user.name) %>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js">
</script>
<script>
$(document).ready(function(){
  $("section1").hide();
  $("#show").click(function(){
    $("section1").show();
  });
});
</script>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
	  <%= @user.email %>
    </section>
	<% if current_user.admin? %>
      <%= link_to "Muuda andmeid", edit_user_path(@user.id) %>
    <% end %>
  </aside>
  <% if current_user?(@user) || current_user.admin? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/aadress_form' %>
        </section>
      </aside>
    </div>
  <% end %>
  <div class="span8">
    <% if @user.aadresses.any? %>
	  <h3>Aadresse: <%= @user.aadresses.count %></h3>
	  <button id="show", class='btn btn-info'>NÃ¤ita aadresse</button>
      <section1>
	  <ol class="aadresses">
        <%= render @aadresses %>
      </ol>
	  <%= will_paginate @aadresses %>
	  	  </section1>
    <% end %>
  </div>
</div>


